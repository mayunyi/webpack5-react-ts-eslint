{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": ".",
        "baseUrl": "./",
        "isolatedModules": true,
        "target": "es6", /** 编译后的版本 */
        "module": "ESNext",
        "jsx": "react",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "resolveJsonModule": true,
        "lib": ["es6", "dom"]
    },
    "include": [
        "src",
        "server"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
